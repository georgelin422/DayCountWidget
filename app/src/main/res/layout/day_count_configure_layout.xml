                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <include
                    layout="@layout/widget_layout5"
                    android:layout_width="70dp"
                    android:layout_height="80dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/style6"
