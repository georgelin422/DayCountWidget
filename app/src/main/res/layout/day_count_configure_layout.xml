                android:padding="5dp">

                <include
                    layout="@layout/widget_layout6"
                    android:layout_width="70dp"
                    android:layout_height="80dp"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/style7"
                android:layout_width="wrap_content"
