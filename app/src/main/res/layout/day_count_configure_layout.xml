<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDDDDD">

    <LinearLayout
        android:id="@+id/row1"
        style="@style/ItemRow">

        <TextView
            style="@style/TextTitle"
            android:text="@string/date"/>

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextContent"
            android:singleLine="true"
            android:text="@string/no_data"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        style="@style/ItemRow"
        android:layout_below="@+id/row1">

        <TextView
            style="@style/TextTitle"
            android:text="@string/what"/>

        <EditText
            android:id="@+id/edt_title"
            style="@style/TextContent"
            android:hint="@string/enter_title"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColorHint="#FFFFFF"/>

    </LinearLayout>



    <FrameLayout
        android:id="@+id/sample_widget_bg"
        android:layout_above="@+id/hlv_style_select_header"
        android:layout_below="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/sample_widget"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:focusable="true"
            android:background="@drawable/body_black"
            android:orientation="vertical"
            android:padding="@dimen/widget_margin"
            android:layout_gravity="center" >

            <TextView
                android:id="@+id/sample_widget_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:background="@drawable/header_black"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:textSize="12sp"
                android:paddingLeft="2dp"
                android:text="@string/sample_widget_title" />

            <TextView
                android:id="@+id/sample_widget_diffdays"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize= "36sp"
                android:text="@string/sample_widget_days" />

            <TextView
                android:id="@+id/sample_widget_since_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize= "12sp"
                android:text="@string/days_left" />

        </LinearLayout>
    </FrameLayout>

    <it.sephiroth.android.library.widget.HListView
        android:id="@+id/hlv_style_select_header"
        android:layout_above="@+id/hlv_style_select_body"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

    </it.sephiroth.android.library.widget.HListView>

    <it.sephiroth.android.library.widget.HListView
        android:layout_above="@+id/btn_ok"
        android:id="@+id/hlv_style_select_body"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

    </it.sephiroth.android.library.widget.HListView>

    <Button
        android:id="@+id/btn_ok"
        style="@style/ButtonConfirm"
        android:layout_alignParentBottom="true"
        android:text="@string/ok"/>

</RelativeLayout>
